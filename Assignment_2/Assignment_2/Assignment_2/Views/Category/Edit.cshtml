@model Category

<h1 class="text-center bg-warning">Edit Category</h1>

<div class="border border-2 rounded rounded-2 w-75 m-auto p-3">
    <form method="post" action="\Category\EditSave">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label id="CategoryName" class="form-label">Category Name</label>
            <input type="text" value="@Model?.CategoryName" name="CategoryName" id="CategoryName" class="form-control" />
        </div>

        <div class="mb-3">
            <label id="Description" class="form-label">Description</label>
            <input type="text" name="Description" value="@Model?.Description" id="Description" class="form-control" />
        </div>

        <div class="m-auto text-center">
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>
