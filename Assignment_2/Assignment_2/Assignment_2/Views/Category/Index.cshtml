@model List<Category>

<h2>Categories</h2>

@if (ViewBag.msg != null)
{
    <h4 class="bg-success text-white p-2 text-center">@ViewBag.msg</h4>
}

@if (Model.Count == 0)
{
    <p>No categories found.</p>
}
else
{
    <table class="table table-bordered text-center">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.CategoryName</td>
                <td>@c.Description</td>
                <td><a href="/Category/Edit/@c.Id" class="btn btn-warning">Edit</a></td>
                <td>
                    <a href="/Category/Delete/@c.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<div class="text-center">
    <a href="/Category/Add" class="btn btn-success">Add Category</a>
</div>
