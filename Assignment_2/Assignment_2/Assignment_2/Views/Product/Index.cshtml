@model List<Product>

<h2>Products</h2>

@if (ViewBag.msg != null)
{
    <h4 class="bg-success text-white p-2 text-center">@ViewBag.msg</h4>
}

@if (Model == null || Model.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <table class="table table-bordered text-center">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.ProductPrice</td>
                <td>@p.Description</td>
                <td>@p.Category?.CategoryName</td>
                <td><a href="/Product/Edit/@p.Id" class="btn btn-warning">Edit</a></td>
                <td>
                    <a href="/Product/Delete/@p.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<div class="text-center">
    <a href="/Product/Add" class="btn btn-success">Add Product</a>
</div>
